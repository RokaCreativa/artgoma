generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Event {
  id                   Int                    @id @default(autoincrement())
  name                 String
  date                 DateTime
  place                String
  isActive             Boolean                @default(true)
  description          String?
  images               String[]               @default([])
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @default(now()) @updatedAt
  slug                 String
  color                String?                @default("#000000")
  isPublished          Boolean                @default(false)
  shortDescription     String                 @default("")
  step                 Int                    @default(0)
  thumbnail            String                 @default("")
  expDate              DateTime               @default(now())
  placeLink            String                 @default("")
  secondaryColor       String?                @default("#ffffff")
  SponsorImagesOnEvent SponsorImagesOnEvent[]
  Visits               Visit[]
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  image           String?
  phone           String?
  isActive        Boolean  @default(true)
  badge           String?
  attendances     Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
  name            String
  password        String?
  purchasesAmount Float    @default(0)
  purchasesCount  Int      @default(0)
  role            String?  @default("user")
  Visits          Visit[]
}

model Visit {
  id             Int           @id @default(autoincrement())
  eventId        Int?
  userId         Int
  date           DateTime
  collaboratorId Int?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @default(now()) @updatedAt
  companions     String
  isCanceled     Boolean       @default(false)
  isUsed         Boolean       @default(false)
  Collaborator   Collaborator? @relation(fields: [collaboratorId], references: [id])
  Event          Event?        @relation(fields: [eventId], references: [id])
  User           User          @relation(fields: [userId], references: [id])
}

model Collaborator {
  id        Int      @id @default(autoincrement())
  name      String
  slogan    String?
  slug      String?  @unique
  code      String   @unique
  image     String?
  email     String   @unique
  phone     String?
  address   String?
  isActive  Boolean  @default(true)
  company   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  Visits    Visit[]
}

model Sponsor {
  id           Int            @id @default(autoincrement())
  name         String
  email        String?
  phone        String?
  address      String?
  company      String?
  slogan       String?
  isActive     Boolean        @default(true)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  SponsorImage SponsorImage[]
}

model SponsorImage {
  id                   Int                    @id @default(autoincrement())
  sponsorId            Int
  image                String
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @default(now())
  Sponsor              Sponsor                @relation(fields: [sponsorId], references: [id], onDelete: Cascade)
  SponsorImagesOnEvent SponsorImagesOnEvent[]
}

model SponsorImagesOnEvent {
  id             Int          @id @default(autoincrement())
  sponsorImageId Int
  eventId        Int
  Event          Event        @relation(fields: [eventId], references: [id])
  SponsorImage   SponsorImage @relation(fields: [sponsorImageId], references: [id], onDelete: Cascade)
}

