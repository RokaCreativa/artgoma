model Slider {
  id          Int          @id @default(autoincrement())
  name        String
  slug        String       @unique
  section     String
  description String?
  isActive    Boolean      @default(true)
  position    Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
  items       SliderItem[]
}

model SliderItem {
  id         Int      @id @default(autoincrement())
  sliderId   Int
  type       String   @default("image")
  url        String?
  youtubeId  String?
  title      String?
  alt        String?
  artistName String?
  width      Int?
  height     Int?
  position   Int      @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  Slider     Slider   @relation(fields: [sliderId], references: [id], onDelete: Cascade)
}

model SectionContent {
  id         Int      @id @default(autoincrement())
  sectionKey String
  locale     String
  content    Json
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@unique([sectionKey, locale])
}

model SiteConfig {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  type      String   @default("text")
  group     String   @default("general")
  label     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
